{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": ".",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "jest"],
    "sourceMap": true,
    "inlineSourceMap": true
  },
  "include": ["app/**/*.ts", "server.ts", "test/**/*.ts"]
}
